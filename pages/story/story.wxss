.container {
  padding: 20px;
  background-color: #f9f9f9;
}

.header {
  background-color: #F17D30;
  padding: 25rpx;
  text-align: center;
  color: white;
}

.title {
  font-size: 24px;
  font-weight: bold;
}

.content {
  margin-top: 10px;
}

.description {
  margin: 10px 0;
  font-size: 16px;
  line-height: 1.5;
}

.intro-image {
  width: 100%;
  height: auto;
  margin: 10px 0;
}


.menu-image {
  width: 100%;
  margin-top: 20rpx;
  border-radius: 8rpx;
}

.address-container {
  display: flex; /* 使用 Flexbox 布局 */
  flex-direction: column; /* 垂直排列 */
  align-items: center; /* 水平居中 */
  margin-top: 20px; /* 上边距 */
}

.address-item {
  margin: 5px 0; /* 每个地址项的上下间距 */
}

.address {
  font-size: 16px;
  color: #333;
  text-align: center; /* 文本居中 */
}